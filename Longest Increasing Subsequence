class Solution {
public:
    int lengthOfLIS(vector<int>& nums) {
        int n=nums.size();
        int ans=0;
        vector<int> dp(n,1);
        for(int i=0;i<n;i++){
            int j=i-1;
            int maxi=0;
            while(j>=0){
                if(nums[i]>nums[j]){
                    maxi=max(maxi,dp[j]);
                }
                j--;
            }
            dp[i]+=maxi;
            ans=max(ans,dp[i]);
            // dp[i]++;
        }
        return ans;
    }
};
